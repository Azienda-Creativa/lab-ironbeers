<div class='card' style='width: 20rem'>
  <img
    src='{{this.image_url}}'
    class='card-img-top'
    style='max-width:  20% ; height: auto; margin:40px'
  />
  <div class='card-body'>
    <h5 class='card-title'>{{this.name}}</h5>
    <p class='card-text'>{{this.tagline}}</p>
    <p class='card-text'>{{this.description}}</p>
  </div>

</div>