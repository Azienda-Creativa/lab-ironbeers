<div class='card mb-3' style='max-width: 540px;'>
  <div class='row g-0'>
    <div class='col-md-4'>
      <img
        src='{{image_url}}'
        class='img-fluid rounded-start'
        style='max-width:  20% ; height: auto; margin:40px'
      />
    </div>
    <div class='col-md-8'>
      <div class='card-body'>
        <h5 class='card-title'>{{name}}</h5>
        <p class='card-text'>{{tagline}}</p>
        <p class='card-text'>{{description}}</p>
        <p class='card-text'>{{food_pairing}}</p>
        <p class='card-text'>{{brewers_tips}}</p>
      </div>
    </div>
  </div>
</div>